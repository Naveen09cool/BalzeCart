{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "root": ".",
  "sourceRoot": "apps/api-gateway/src",
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "tsconfig.base.json",
    "deleteOutDir": true
  },
  "projects": {
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main"
    },
    "auth-service": {
      "type": "application",
      "root": "apps/auth-service",
      "entryFile": "main"
    },
    "order-service": {
      "type": "application",
      "root": "apps/order-service",
      "entryFile": "main"
    },
    "payment-service": {
      "type": "application",
      "root": "apps/payment-service",
      "entryFile": "main"
    },
    "product-service": {
      "type": "application",
      "root": "apps/product-service",
      "entryFile": "main"
    }
  }
}